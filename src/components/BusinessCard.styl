$gap = 40px

.card
    width 540px

    margin $gap auto
    padding $gap
    box-shadow:
        1px 1px 20px hsla( 0, 0%, 0%, .1 ),
        0   0    3px -2px hsla( 0, 0%, 0%, .2 )

    display flex
    user-select none

.photo
    width 128px
    height @width
    border-radius 50%
    overflow hidden
    margin-right $gap
    background #eee

.info
    color #888
    font-size 1.6em
    font-weight 300
    user-select initial

.title
    margin 0

    font-size 2.2rem
    font-weight 400
    color #333

.post
    color inherit
    margin-bottom .5em

.email
    color inherit
